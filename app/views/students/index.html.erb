<p id="notice"><%= notice %></p>

<h1>List of Current Students</h1>

<table class="table table-striped">
  <thead class="table-light">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <% if student.user == Current.user %>
        <td style="padding-top:1em;"><%= student.first_name %></td>
        <td style="padding-top:1em;"><%= student.last_name %></td>
        <td style="padding-top:1em;"><%= student.email %></td>
        <td style="padding-top:1em;"><%= student.program %></td>
        <td><%= link_to 'View', student, class:"btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-link" %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class:"btn btn-primary" %>
